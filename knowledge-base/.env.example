# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Embedding model: text-embedding-3-small (cheaper) or text-embedding-3-large (better)
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# LLM model for extraction
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.0

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=learnings
# QDRANT_API_KEY=optional_for_cloud

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
MAX_LEARNING_LENGTH=500
DEFAULT_RETRIEVAL_K=5

# API Configuration
API_TITLE=Learnings API
API_DESCRIPTION=CodeRabbit-inspired learnings ingestion and retrieval system
API_VERSION=1.0.0
